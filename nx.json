{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "master",
  "cli": {
    "packageManager": "pnpm"
  },
  "workspaceLayout": {
    "libsDir": "packages"
  },
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "!{projectRoot}/dist/**",
      "!{projectRoot}/out-tsc/**",
      "!{projectRoot}/coverage/**",
      "!{projectRoot}/CHANGELOG.md",
      "!{projectRoot}/README.md",
			"!{projectRoot}/**/*.md"
    ],
    "production": [
      "{projectRoot}/src/**",
      "{projectRoot}/.babelrc.*",
      "{projectRoot}/rollup.config.*",
      "{projectRoot}/api-extractor.json",
      "{projectRoot}/api-extractor.*.json",
      "{projectRoot}/tsconfig.json",
      "{projectRoot}/tsconfig.*.json",
      "!{projectRoot}/test/**",
      "!{projectRoot}/**/__tests__/*"
    ]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "cache": true
    },
    "test": {
      "dependsOn": [
        "build"
      ],
      "cache": true
    },
    "lint": {
      "dependsOn": [
        "build"
      ],
      "cache": true
    }
  }
}
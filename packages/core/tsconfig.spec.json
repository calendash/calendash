{
  "extends": "@calendash/config/tsconfig.base.json",
  "compilerOptions": {
    "composite": false,
    "types": ["jest", "@calendash/config/env"],
    "noEmit": true,
    "incremental": false
  },
  "include": [
    "test/**/*.spec.*",
    "test/**/*.test.*",
    "src/**/__tests__/*.spec.*",
    "src/**/__tests__/*.test.*"
  ]
}

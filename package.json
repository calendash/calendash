{
  "name": "@calendash/monorepo",
  "version": "1.0.0",
  "description": "Calendash monorepo",
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=22.15.0",
    "pnpm": ">=10.13.1"
  },
  "scripts": {
    "build": "nx run-many --target build",
    "test": "nx run-many --target test",
    "lint": "nx run-many --target lint",
    "publish:mock": "node ./scripts/publish.js --verbose --dryRun --tag=core@1.0.0",
    "release:mock": "node ./scripts/release.js --verbose --dryRun --packages core --specifier major",
    "prepare": "husky"
  },
  "pnpm": {
    "overrides": {
      "glob": "^10.4.5",
      "inflight": "npm:@empty:1.0.0"
    }
  },
  "lint-staged": {
    "scripts/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "config/**/*.{js,jsx,ts,tsx,mjs,mts,cjs,cts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "packages/**/*.{js,jsx,ts,tsx,mjs,mts,cjs,cts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-typescript": "^7.27.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.30.1",
    "@microsoft/api-extractor": "^7.52.8",
    "@nx/js": "^21.2.2",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^30.0.0",
    "babel-plugin-annotate-pure-calls": "^0.5.0",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "jest-junit": "^16.0.0",
    "lint-staged": "^16.1.2",
    "nx": "^21.2.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.44.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0",
    "yargs": "^18.0.0",
    "zx": "^8.6.2"
  },
  "author": {
    "email": "ruben.omh@proton.me",
    "name": "rocmaz"
  },
  "license": "MIT",
  "private": true
}
